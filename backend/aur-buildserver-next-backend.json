{
    "openapi": "3.0.3",
    "info": {
        "title": "AUR Buildserver Next Backend",
        "description": "Backend for aur-buildserver-next",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:5768",
            "description": "Development server"
        }
    ],
    "components": {
        "parameters": {
            "packageName": {
                "name": "packageName",
                "in": "path",
                "required": true,
                "schema": {
                    "type": "string"
                }
            }
        },
        "schemas": {
            "SuccessResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "success"
                ]
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean"
                    },
                    "error": {
                        "type": "string"
                    }
                },
                "required": [
                    "success",
                    "error"
                ]
            },
            "PackageByNameBody": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ]
            },
            "PackageByIdBody": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    }
                },
                "required": [
                    "id"
                ]
            },
            "PackageFromDatabase": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "packageId": {
                        "type": "number"
                    },
                    "lastModifiedDatabaseEntry": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string",
                        "nullable": true
                    },
                    "packageBaseId":  {
                        "type": "integer"
                    },
                    "packageBase": {
                        "type": "string"
                    },
                    "maintainer":  {
                        "type": "string",
                        "nullable": true
                    },
                    "votes": {
                        "type": "integer"
                    },
                    "popularity":  {
                        "type": "number"
                    },
                    "firstSubmitted": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "lastModified":  {
                        "type": "string",
                        "format": "date-time"
                    },
                    "flaggedOutOfDate": {
                        "type": "boolean",
                        "nullable": true
                    },
                    "currentVersion":  {
                        "type": "string"
                    },
                    "urlPath": {
                        "type": "string",
                        "nullable": true
                    },
                    "url":  {
                        "type": "string",
                        "nullable": true
                    },
                    "dependencies": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "id",
                    "packageId",
                    "lastModifiedDatabaseEntry",
                    "name",
                    "description",
                    "packageBaseId",
                    "packageBase",
                    "maintainer",
                    "votes",
                    "popularity",
                    "firstSubmitted",
                    "lastModified",
                    "flaggedOutOfDate",
                    "currentVersion",
                    "urlPath",
                    "url"
                ]
            },
            "InfoResponse": {
                "type": "object",
                "description": "Server Information response",
                "properties": {
                    "signingKeyId": {
                        "type": "string",
                        "nullable": true
                    }
                },
                "required": [
                    "signingKeyId"
                ]
            },
            "BuildFromDatabase": {
                "type": "object",
                "description": "Information about a build from database",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "running": {
                        "type": "boolean"
                    },
                    "startedAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "finishedAt": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "exitCode": {
                        "type": "number",
                        "nullable": true
                    },
                    "success": {
                        "type": "boolean",
                        "nullable": true
                    },
                    "version": {
                        "type": "object",
                        "properties": {
                            "pkgver": {
                                "type": "string"
                            },
                            "pkgrel": {
                                "type": "string"
                            },
                            "gitHash": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "pkgver",
                            "pkgrel",
                            "gitHash"
                        ]
                    },
                    "package": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "id": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "id"
                        ]
                    }
                },
                "required": [
                    "id",
                    "running",
                    "startedAt",
                    "finishedAt",
                    "exitCode",
                    "success",
                    "version",
                    "package"
                ]
            },
            "LogFile": {
                "type": "string"
            },
            "LogFileResponse": {
                "type": "object",
                "description": "Response for log file",
                "properties": {
                    "logFileContents": {
                        "$ref": "#/components/schemas/LogFile"
                    },
                    "logFile": {
                        "type": "string"
                    },
                    "success": {
                        "type": "boolean",
                        "nullable": true
                    },
                    "startedAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "finishedAt": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "exitCode": {
                        "type": "number",
                        "nullable": true
                    },
                    "running": {
                        "type": "boolean"
                    },
                    "version": {
                        "type": "object",
                        "properties": {
                            "pkgver": {
                                "type": "string"
                            },
                            "pkgrel": {
                                "type": "string"
                            },
                            "gitHash": {
                                "type": "string"
                            }
                        }
                    }
                },
                "required": [
                    "logFile",
                    "success",
                    "startedAt",
                    "finishedAt",
                    "exitCode",
                    "running",
                    "version"
                ]
            }
        }
    },
    "paths": {
        "/api/info": {
            "get": {
                "summary": "Get information from the backend",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/SuccessResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "$ref": "#/components/schemas/InfoResponse"
                                                }
                                            },
                                            "required": [
                                                "data"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/builds/list": {
            "get": {
                "summary": "List all builds",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/SuccessResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/BuildFromDatabase"
                                                    }
                                                }
                                            },
                                            "required": [
                                                "data"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/builds/details/{buildId}": {
            "parameters": [
                {
                    "name": "buildId",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "get": {
                "summary": "Get the log file of a build",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/SuccessResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "$ref": "#/components/schemas/LogFileResponse"
                                                }
                                            },
                                            "required": [
                                                "data"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/gnupg/list": {
            "get": {
                "summary": "List all GnuPG keys",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/SuccessResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "id": {
                                                                "type": "string"
                                                            },
                                                            "keyId": {
                                                                "type": "string"
                                                            },
                                                            "accepted": {
                                                                "type": "boolean"
                                                            }
                                                        },
                                                        "required": [
                                                            "id",
                                                            "keyId",
                                                            "accepted"
                                                        ]
                                                    }
                                                }
                                            },
                                            "required": [
                                                "data"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/gnupg/trust": {
            "post": {
                "summary": "Trust a GnuPG key",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "keyId": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "keyId"
                                ]
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/packages/remove": {
            "post": {
                "summary": "Remove a package from database",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PackageByIdBody"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/packages/add": {
            "post": {
                "summary": "Add a new package to database",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PackageByNameBody"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/aur/search/{packageName}": {
            "parameters": [
                {
                    "$ref": "#/components/parameters/packageName"
                }
            ],
            "get": {
                "summary": "Search for an AUR package",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/SuccessResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "allOf": [
                                                        {
                                                            "$ref": "./aur-openapi.json#/components/schemas/SearchResult"
                                                        },
                                                        {
                                                            "type": "object",
                                                            "description": "Additional data",
                                                            "properties": {
                                                                "knownPackages": {
                                                                    "type": "array",
                                                                    "items": {
                                                                        "type": "object",
                                                                        "properties": {
                                                                            "packageId": {
                                                                                "type": "number"
                                                                            }
                                                                        },
                                                                        "required": [
                                                                            "packageId"
                                                                        ]
                                                                    }
                                                                }
                                                            },
                                                            "required": [
                                                                "knownPackages"
                                                            ]
                                                        }
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "data"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/aur/fetchPkgbuild/{packageName}": {
            "parameters": [
                {
                    "$ref": "#/components/parameters/packageName"
                }
            ],
            "get": {
                "summary": "Get the pkgbuild of an AUR package",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/SuccessResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "string",
                                                    "description": "The pkgbuild content"
                                                }
                                            },
                                            "required": [
                                                "data"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/aur/fetchDetailed/{packageName}": {
            "parameters": [
                {
                    "$ref": "#/components/parameters/packageName"
                }
            ],
            "get": {
                "summary": "Get detailed package information of an AUR package",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/SuccessResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "allOf": [
                                                        {
                                                            "$ref": "./aur-openapi.json#/components/schemas/InfoResult"
                                                        },
                                                        {
                                                            "type": "object",
                                                            "description": "Additional data",
                                                            "properties": {
                                                                "aurPackages": {
                                                                    "description": "List of package names of dependencies etc. that are not from official repositories",
                                                                    "type": "array",
                                                                    "items": {
                                                                        "type": "string",
                                                                        "description": "Package name"
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "data"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/packages/list": {
            "get": {
                "summary": "List all packages in database",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/SuccessResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/PackageFromDatabase"
                                                    }
                                                }
                                            },
                                            "required": [
                                                "data"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Error response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
